@model IEnumerable<DevOps.UI.Models.BuildProject>

<!-- Data Table area Start-->
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="table-responsive">
                        <h4>Builds</h4>
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <div class="nk-int-mk sl-dp-mn sm-res-mg-t-10">
                                <h2>Search Project</h2>
                            </div>
                            <div class="bootstrap-select fm-cmp-mg">
                                @Html.DropDownList("Project", new SelectList(ViewBag.Projects, "ProjectId", "ProjectName"), "Search", new { @class = "udropdown" })
                            </div>
                            <input type="submit" id="submit" value="Search" class=" btn-success" />
                        </div>
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Project Name</th>
                                    <th>Build By</th>
                                    <th>Version</th>
                                    <th>URL</th>
                                    <th>Status</th>
                                    <th>Build Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        var i;
        if ('@Session["Role"].ToString()' == 'Admin') {
            i = 0;
        }
        else {
            i = '@Session["Organization"].ToString()';
        }
        var urlb = "http://localhost:60969/api/Projects/Builds?id=" + i;
        $.ajax({
            url: urlb,
                context: document.body,
                success: function (data) {
                    console.log(data);
                    for (var i = 0, li = data.length; i < li; i++) {
                        var version = data[i].mejor_Version + "." + data[i].minor_Version + "." + data[i].build_Version;
                        var newTr = "<tr> <td>" + data[i].project.projectName + " </td><td>" + data[i].user.name + "</td><td>" + version + "</td><td>" + data[i].downloadURL + "</td><td>" + data[i].status + "</td><td>" + data[i].buildDate + "</td><td> <input type='hidden' value=" + data[i].buildId + ">";
                        if ('@Session["Role"].ToString()' == "Admin" || '@Session["Role"].ToString()' == "ReleaseManager") {
                            newTr += "<a class='editajax' id='" + data[i].buildId + "' href='#'>Edit</a></td > <td><a class='deleteajax' id='" + data[i].buildId + "' href='#'>Delete</a></td><td><a class='shareajax' id='" + data[i].buildId + "' href='#'>Publish</a>";
                        }
                        newTr += "</td></tr >";
                        $("#data-table-basic").append(newTr);
                        if ('@Session["Role"].ToString()' == "Admin" || '@Session["Role"].ToString()' == "ReleaseManager") {


                            document.getElementsByClassName("shareajax")[i].addEventListener("click", function (event) {
                                event.preventDefault();
                                var url1 = "http://localhost:57996/Servers/ShareServer/" + event.target.id;
                                $.ajax({
                                    url: url1,
                                    type: 'GET',//type of posting the data
                                    contentType: 'application/json',
                                    dataType: 'html',
                                    success: function (r) {
                                        //console.log(r.ViewString);
                                        $("#partialbody").empty();
                                        $("#partialbody").html(r);
                                    },
                                    error: function (xhr, ajaxOptions, thrownError) {
                                        //what to do in error
                                        alert(url1);
                                    }
                                });

                            });

                            document.getElementsByClassName("editajax")[i].addEventListener("click", function (event) {
                                event.preventDefault();
                                var url1 = "http://localhost:57996/Servers/EditServer/" + event.target.id;
