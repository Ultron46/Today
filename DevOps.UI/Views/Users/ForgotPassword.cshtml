                    }
                 }
            });
                if (validator.form()) {
                validation = true;
            }


        $('#submit').click(function (e) {
            e.preventDefault();
            var Email = $('#Email').val();

            var url1 = "http://localhost:57996/Users/CheckEmail?Email=" + Email;
            $.ajax({
                url: url1,
                type: 'GET',//type of posting the data
                contentType: 'application/json',
                dataType: 'json',
                success: function (r) {
                    var url2 = "http://localhost:57996/Users/SendResetLink?email=" + Email;
                    $.ajax({
